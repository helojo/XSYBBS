<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/modify_note_title"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="亲，请输入标题~" />

    <EditText
        android:id="@+id/modify_note_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:hint="亲，请输入内容~" />

    <TextView
        android:layout_width="match_parent"
        android:text="@string/please_choose_note_type"
        android:textSize="20sp"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/modify_note_linear"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/modify_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/modify_btntocao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吐槽"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/modify_btnlife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活"/>

            <RadioButton
                android:id="@+id/modify_btnstudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学习"/>

            <RadioButton
                android:id="@+id/modify_btnlove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="情感"/>

        </RadioGroup>




    </LinearLayout>


    <Button
        android:id="@+id/modify_note"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_bg"
        android:text="修改" />


</LinearLayout>